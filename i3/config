set $device device [sSlLhHrF][mMnN‚ùñs]‚ùñ[dh]
set $force device.force [SRL]
bindsym $mod+Shift+x mode "$device"
mode "$device" {
        # Power control
        bindsym Shift+l exec $HOME/.i3/device.sh logout,        mode "default"
        bindsym l       exec $HOME/.i3/device.sh lock,          mode "default"
        bindsym s       exec $HOME/.i3/device.sh shutdown,      mode "default"
        bindsym Shift+s exec $HOME/.i3/device.sh suspend,       mode "default"
        bindsym h       exec $HOME/.i3/device.sh hibernate,     mode "default"
        bindsym Shift+h exec $HOME/.i3/device.sh hybrid,        mode "default"
        bindsym r       exec $HOME/.i3/device.sh reboot,        mode "default"

        bindsym n       exec $HOME/.i3/device.sh notify_pause,  mode "default"
        bindsym Shift+n exec $HOME/.i3/device.sh notify_resume, mode "default"

        bindsym $mod+s  exec $HOME/.i3/device.sh screen_off,    mode "default"

        # Mouse
        bindsym m       exec $HOME/.i3/device.sh mouse_off,     mode "default"
        bindsym Shift+m exec $HOME/.i3/device.sh mouse_on,      mode "default"

        # Bar
        bindsym $mod+d bar mode dock, mode "default"
        bindsym $mod+h bar mode hide, mode "default"

        bindsym Shift+f mode "$force"
        bindsym Return  mode "default"
        bindsym Escape  mode "default"

}
mode "$force" {
        bindsym Shift+l exec $HOME/.i3/exit.sh logout_force     mode "default"
        bindsym Shift+s exec $HOME/.i3/exit.sh shutdown_force   mode "default"
        bindsym Shift+r exec $HOME/.i3/exit.sh reboot_force     mode "default"

        bindsym Escape mode "$device"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Shift+h resize shrink width 1 px or 1 ppt
        bindsym Shift+j resize grow height 1 px or 1 ppt
        bindsym Shift+k resize shrink height 1 px or 1 ppt
        bindsym Shift+l resize grow width 1 px or 1 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+Left resize shrink width 1 px or 1 ppt
        bindsym Shift+Down resize grow height 1 px or 1 ppt
        bindsym Shift+Up resize shrink height 1 px or 1 ppt
        bindsym Shift+Right resize grow width 1 px or 1 ppt
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

